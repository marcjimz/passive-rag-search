{
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "src/app.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--port=50005",
                "--no-debugger",
                "--reload"
            ],
            "jinja": true,
            "justMyCode": true,
            "preLaunchTask": "pip install"
        }
    ]
}